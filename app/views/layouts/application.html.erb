<!DOCTYPE html>
<html>
	<head>
    <title><%= title %></title>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
      <%= render 'layouts/header' %>
    <div class="container">
      <section class="round">
        <% flash.each do |k,v| %>
          <div class="flash <%= k %>"><%= v %></div>
        <% end %>
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
